<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="300.0" prefWidth="382.0" styleClass="border-pane" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ridesfx.uicontrollers.LoginController">
    <right>
        <AnchorPane stylesheets="@Styles.css">
            <children>
                <Label fx:id="output" layoutX="142.0" layoutY="194.0" prefHeight="17.0" prefWidth="97.0" stylesheets="@Styles.css" wrapText="true" />
                <Button layoutX="168.0" layoutY="211.0" onAction="#loginBtnClick" styleClass="btn-info" stylesheets="@Styles.css" text="LogIn" />
                <Label layoutX="57.0" layoutY="145.0" styleClass="bold-label" stylesheets="@Styles.css" text="Password:" />
                <PasswordField fx:id="password" layoutX="123.0" layoutY="140.0" stylesheets="@Styles.css" />
                <TextField fx:id="email" layoutX="124.0" layoutY="76.0" stylesheets="@Styles.css" />
                <Label layoutX="77.0" layoutY="80.0" prefHeight="17.0" prefWidth="35.0" styleClass="bold-label" stylesheets="@Styles.css" text="Email:" />
                <Label fx:id="Register" layoutX="13.0" layoutY="247.0" onMouseClicked="#handleLabelClick" prefHeight="34.0" prefWidth="340.0" styleClass="bold-label" stylesheets="@Styles.css" text="You don't have an account yet? Register now clicking here" />
                <Label fx:id="InvalidUser" layoutX="91.0" layoutY="108.0" prefHeight="18.0" prefWidth="218.0" styleClass="bold-label" stylesheets="@Styles.css" text="A user with this email doesn't exist" />
                <Label fx:id="WrongPassword" layoutX="126.0" layoutY="165.0" prefHeight="17.0" prefWidth="149.0" styleClass="bold-label" stylesheets="@Styles.css" text="The password is incorrect" />
            </children>
        </AnchorPane>
    </right>
</BorderPane>
